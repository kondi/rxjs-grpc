{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./js",
    "baseUrl": "./src",
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
